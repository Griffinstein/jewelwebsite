<h1>Listing Stores</h1>

<table>
  <tr>
  	<th>Store ID</th>
    <th>Store Name</th>
    <th>Town</th>
    <th>Staff</th>
    <th>No. Items</th>
  </tr>

<% @stores.each do |store| %>
  <tr>
  	<td><%= store.id %></td>
    <td><%= store.name %></td>
    <td><%= 'store.address.town' %></td>
    <td><%= 'store.staff?' %></td>
    <td><%= 'store.items.size' %></td>
  </tr>
<% end %>
</table>

<br />


<%= link_to 'New Store', new_store_path %>