<%= form.fields_for :users do |f| %>
  <div class="field">
    <%= f.label :Username %><br />
    <%= f.text_field :user %>
  </div>  
  <div class="field">
    <%= f.label :Password %><br />
    <%= f.password_field :password %>
  </div>  
  <div class="field">
    <%= f.label :EMail %><br />
    <%= f.email_field :email %>
  </div>  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>